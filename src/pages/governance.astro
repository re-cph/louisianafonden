  {
    name: "Lovpligtig redegørelse for god fondsledelse 2021",
    pdf: "/pdf/skema_god_fondsledelse_MF_2021.pdf",
  },
  {
    name: "Lovpligtig redegørelse for god fondsledelse 2020",
    pdf: "/pdf/skema_god_fondsledelse_MF_2020.pdf",
  },
  {
